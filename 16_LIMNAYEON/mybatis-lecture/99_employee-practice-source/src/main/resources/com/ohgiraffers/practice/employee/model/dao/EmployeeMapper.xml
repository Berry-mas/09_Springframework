<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.practice.employee.model.dao.EmployeeMapper">
    <resultMap id="employeeResultMap" type="com.ohgiraffers.practice.employee.model.dto.EmployeeDTO">
        <id property="empId" column="EMP_ID"/>
        <result property="empName" column="EMP_NAME"/>
        <result property="empNo" column="EMP_NO"/>
        <result property="email" column="EMAIL"/>
        <result property="phone" column="PHONE"/>
        <result property="deptCode" column="DEPT_CODE"/>
        <result property="jobCode" column="JOB_CODE"/>
        <result property="salLevel" column="SAL_LEVEL"/>
        <result property="salary" column="SALARY"/>
        <result property="bonus" column="BONUS"/>
        <result property="managerId" column="MANAGER_ID"/>
        <result property="hiredate" column="HIRE_DATE"/>
        <result property="quitDate" column="QUIT_DATE"/>
        <result property="quitYn" column="QUIT_YN"/>
    </resultMap>

    <select id="selectAll" resultType="com.ohgiraffers.practice.employee.model.dto.EmployeeDTO">
        SELECT
        EMP_ID
        , EMP_NAME
        , EMP_NO
        , EMAIL
        , PHONE
        , DEPT_CODE
        , JOB_CODE
        , SAL_LEVEL
        , SALARY
        , BONUS
        , MANAGER_ID
        , HIRE_DATE
        , QUIT_DATE
        , QUIT_YN
        FROM employee;
    </select>

    <select id="selectMenuByMenuCode" resultType="employeeResultMap">
        SELECT
        EMP_ID,
        EMP_NAME,
        EMP_NO,
        EMAIL,
        PHONE,
        DEPT_CODE,
        JOB_CODE,
        SAL_LEVEL,
        SALARY,
        BONUS,
        MANAGER_ID,
        HIRE_DATE,
        QUIT_DATE,
        QUIT_YN
        FROM employee
        WHERE EMP_ID = #{empId}
    </select>
</mapper>